<h1>Listing reports</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Body</th>
      <th>Location</th>
      <th>Categories</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= report.description %></td>
        <td><%= report.body %></td>
        <td><%= report.location %></td>
        <td>
          <% report.categories.each do |category| %>
            <span><%= category.name %></span>
          <% end %>
        </td>
        <td>
          <span><%= link_to 'Show', report %></span>
          <span><%= link_to 'Edit', edit_report_path(report) %></span>
          <span><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

